{% extends 'Layout/user_layout.html.twig' %}




{% block stylesheets %}
<style>
.container {
    max-width: 1100px;
    margin: 0 auto;
  }
  .essai{
  width : 100%;
  height : 200px;
  background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    background-color: rgba(255, 255, 255, 0.15);
    background-blend-mode: overlay;

}



.site-title {
	color: white;
}

.cards{
    margin-top : 30px;
    padding-left : 30px;
    padding-right : 30px;
}
.card {
	margin-bottom: 2em;	
    background: #fefff9;
    color: #363636;
    text-decoration: none;
    -moz-box-shadow: rgba(0, 0, 0, 0.19) 0 0 8px 0;
    -webkit-box-shadow: rgba(0, 0, 0, 0.19) 0 0 8px 0;
    box-shadow: rgba(0, 0, 0, 0.19) 0 0 8px 0;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    border-radius: 4px;
}

.card a {
	color: black;
	text-decoration: none;
    width : 100%;
}

.card a:hover {
	box-shadow: 3px 3px 8px hsl(0, 0%, 70%);
}

.card-content {
	padding: 1.4em;
}

.card-content h2 {
	margin-top: 0;
	margin-bottom: .5em;
    padding : 0px;
	font-weight: normal;
}

.card-content p {
	font-size: 95%;
}

img {
  width: 100%;
  height: auto;
  max-height : 200px;
}

/* Flexbox styles */
@media screen and (min-width: 40em) {  
  .cards {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .card {
    margin-bottom: 1em;
    display: flex;
    flex: 0 1 calc(50% - 0.5em);
    /* width: calc(50% - 1em); */
  }
} /* mq 40em*/

@media screen and (min-width: 60em) {
  .cards {

  }
  
  .card {
    margin-bottom: 2em;
    display: flex;
    flex: 0 1 calc(33% - 0.5em);
    /* width: calc(33% - 1em); */
  }
} /* mq 60em*/

</style>


{% endblock %}

{% block h1 %}Actualités{% endblock %}

{% block body %}

<div class="pageTitle">
      <div>
            <h1>Actualités</h1>
      </div>
  </div>

  <div class="container">
  

   
<div class="centered">

    <section class="cards">
 {% for post in posts %}
        <article class="card">
        <a href="{{ path('actualite_detail', { 'id': post.id }) }}">
            {% if post.images|length > 0 %}
                {% for image in post.images %}
                    {% if loop.index == 1 %}
                    <div class ="essai" style="background-image: url({{ asset('upload/images') }}/galery/{{image.files}}) "></div>
                        {% endif %}
                    {% endfor %}
                

            {% else %}
                <div class ="essai" style="background-image: url(http://placeimg.com/400/400/people) "></div>

            {% endif %}
            
    
          <div class="card-content">
            <h2>{{ post.title }}</h2>
            <p> {{ post.content|striptags('')|raw [:100] }} ...</p>
          </div>
          <!-- .card-content -->
        </a>
      </article>
    {% endfor %}
      
      
    </section>
    <!-- .cards -->

  </div>

               

    </div>

{% endblock %}

